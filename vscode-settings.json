// Place your settings in this file to overwrite the default settings
//
//enable/disable linting in python with line 
//  python.linting.enabled": true,
{
    "editor.fontSize": 16,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true
  },
    "python.linting.enabled": true, 
    "python.linting.pylintEnabled": true,
}
